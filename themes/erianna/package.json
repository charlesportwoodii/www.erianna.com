{
  "name": "hugo-erianna-theme",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Hugo theme for www.erianna.com",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --color --config ./webpack.config.js",
    "build": "cross-env NODE_ENV=production webpack --config ./webpack.config.js --color --display-error-details; yarn run sri;",
    "sri": "echo \"---\njs: $(shasum -b -a 384 ./static/js/*.js | xxd -r -p | base64)\ncss: $(shasum -b -a 384 ./static/css/*.css | xxd -r -p | base64)\n\" > ./data/assets/main/sri.yml"
  },
  "author": "Charles R. Portwood II <charlesportwoodii@erianna.com>",
  "devDependencies": {
    "assets-webpack-plugin": "^3.8.4",
    "autoprefixer": "^8.6.3",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.2.0",
    "css-hot-loader": "1.3.9",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^v4.0.0-alpha.0",
    "file-loader": "^1.1.11",
    "eslint": "^5.0.0",
    "expose-loader": "^0.7.5",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "import-loader": "^1.0.1",
    "json-loader": "^0.5.7",
    "source-list-map": "2.0.0",
    "@fortawesome/fontawesome-free": "^5.1.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.0",
    "@fortawesome/free-regular-svg-icons": "^5.1.0",
    "@fortawesome/free-solid-svg-icons": "^5.1.0",
    "@fortawesome/free-brands-svg-icons": "^5.1.0",
    "imports-loader": "^0.8.0",
    "node-sass": "^4.9.0",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "raw-loader": "^0.5.1",
    "resolve-url": "^0.2.1",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "4.12.0",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "3.1.4",
    "webpack-event-plugin": "^1.0.0",
    "whatwg-fetch": "^2.0.4",
    "optimize-css-assets-webpack-plugin": "^4.0.2",
    "highlight.js": "^9.12.0"
  }
}
